<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardItem">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/relative_social">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_image" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/post_image"
            android:text="Item X"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/desc_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_toRightOf="@+id/post_image"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/graph_follower"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:layout_below="@+id/tvItem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_graphic" />

        <TextView
            android:id="@+id/lm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_alignTop="@+id/graph_follower"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="23dp"
            android:layout_toStartOf="@+id/graph_follower"
            android:layout_toLeftOf="@+id/graph_follower"
            android:text="TextView" />

        <TextView
            android:id="@+id/lw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@+id/graph_follower"
            android:layout_toLeftOf="@+id/graph_follower"
            android:text="TextView" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>