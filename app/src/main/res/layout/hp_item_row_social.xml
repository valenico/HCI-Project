<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2sdp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardItem">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:id="@+id/relative_social">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/_12sdp"
            android:maxHeight="@dimen/_45sdp"
            android:maxWidth="@dimen/_45sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_alignParentStart="true"

            app:srcCompat="@drawable/ic_no_image" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/post_image"
            android:layout_marginLeft="@dimen/_6sdp"
            android:text=""
            android:textSize="@dimen/_15sdp"
            android:layout_toEndOf="@+id/post_image"
            android:layout_marginStart="@dimen/_6sdp" />


        <TextView
            android:id="@+id/desc_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toRightOf="@+id/post_image"
            android:textSize="@dimen/_12sdp" />

        <ImageButton
            android:id="@+id/graph_follower"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tvItem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-15dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_graphic" />

        <TextView
            android:id="@+id/lm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_alignTop="@+id/graph_follower"
            android:layout_marginBottom="@dimen/_18sdp"
            android:layout_toStartOf="@+id/graph_follower"
            android:layout_toLeftOf="@+id/graph_follower"
            android:textSize="@dimen/_11sdp"
            android:text="TextView" />

        <TextView
            android:id="@+id/lw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_marginTop="@dimen/_6sdp"
            android:textSize="@dimen/_11sdp"
            android:layout_toStartOf="@+id/graph_follower"
            android:layout_toLeftOf="@+id/graph_follower"
            android:text="TextView" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>