<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_2sdp"
    android:background="@color/card_color"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardItem">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_color"
        android:padding="@dimen/_6sdp"
        android:id="@+id/relative_social2">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/_12sdp"
            android:maxHeight="@dimen/_45sdp"
            android:maxWidth="@dimen/_45sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_no_image"/>

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/textColor"
            android:layout_toRightOf="@+id/post_image"
            android:text=""
            android:textSize="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_toEndOf="@+id/post_image" />


        <TextView
            android:id="@+id/desc_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textColor="@color/textColor"
            android:layout_toRightOf="@+id/post_image"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/graph_follower"
            android:layout_width="89dp"
            android:layout_height="52dp"
            android:layout_below="@+id/tvItem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="241dp"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="-28dp"
            android:layout_toEndOf="@+id/post_image"
            android:layout_toRightOf="@+id/post_image"
            android:background="#00FFFFFF"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>