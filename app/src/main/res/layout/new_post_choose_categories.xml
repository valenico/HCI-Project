<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">
    <com.jh.circularlist.CircularListView
        android:id="@+id/circle_interests_new_post"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/ok_categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/backgroundColor"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_categories"
        android:text="Ok"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/circle_interests_new_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        android:background="@drawable/custom_button"
        android:layout_marginStart="@dimen/_110sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>